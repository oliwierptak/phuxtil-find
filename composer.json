{
    "name": "phuxtil/find",
    "description": "Easy interface for output of 'find' unix command",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "^8",
        "phuxtil/chmod": "^3",
        "phuxtil/splfileinfo": "^3"
    },
    "require-dev": {
        "symfony/var-dumper": "^4|^5",
        "phpunit/phpunit": "^9"
    },
    "autoload": {
        "psr-4": {
            "Phuxtil\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhuxtilTests\\Functional\\": "tests/Functional"
        }
    },
    "scripts": {
        "tests": [
            "vendor/bin/phpunit --testdox --no-coverage"
        ]
    }
}
